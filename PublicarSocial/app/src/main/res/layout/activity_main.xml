<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPARTIR"
        android:id="@+id/buttonShare"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonFacebook"
        android:background="@drawable/social_facebook"
        android:layout_below="@+id/buttonShare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttontwitter"
        android:background="@drawable/twitter"
        android:layout_alignTop="@+id/buttonFacebook"
        android:layout_toLeftOf="@+id/buttonShare"
        android:layout_toStartOf="@+id/buttonShare" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonwhatsapp"
        android:background="@drawable/whatsapp_socialnetwork"
        android:layout_alignTop="@+id/buttonFacebook"
        android:layout_toRightOf="@+id/buttonShare"
        android:layout_toEndOf="@+id/buttonShare" />

</RelativeLayout>
